<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DialogTheme" parent="@android:style/Theme.Translucent.NoTitleBar" />

    <style name="WideDialog">
        <item name="android:windowMinWidthMajor">95%</item>
        <item name="android:windowMinWidthMinor">95%</item>
    </style>

    <style name="CustomBottomSheetDialogTheme">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ThemeFileManager" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimary">@color/theme_color</item>
        <item name="colorPrimaryVariant">@color/theme_color</item>
    </style>

    <style name="ThemeFileManager_black" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimary">@color/theme_color</item>
        <item name="colorPrimaryVariant">@color/theme_color</item>
    </style>

    <style name="Fullscreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/theme_color</item>
        <item name="colorPrimaryDark">@color/theme_color</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ImageDialogTheme">
        <item name="android:windowMinWidthMajor">@null</item>
        <item name="android:windowMinWidthMinor">@null</item>
    </style>

    <style name="LargeIconView">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">90dp</item>
    </style>

    <style name="Progress_tint">
        <item name="colorAccent">@color/theme_color</item>
    </style>

    <style name="edit_text_style">
        <item name="android:textColorPrimary">#ffffff</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
        <item name="colorControlActivated">#ffffff</item>
        <item name="colorControlNormal">#ffffff</item>
    </style>

    <style name="home_button_text">
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:textColor">@color/home_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="home_card">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">@dimen/_45sdp</item>
        <item name="android:layout_height">@dimen/_45sdp</item>
        <item name="android:layout_margin">@dimen/_8sdp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardElevation">@dimen/_3sdp</item>
    </style>

    <style name="home_icon">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">@dimen/_35sdp</item>
        <item name="android:layout_height">@dimen/_25sdp</item>
    </style>

    <style name="icon_style">
        <item name="android:gravity">left|center_horizontal|clip_horizontal</item>
        <item name="android:layout_gravity">left|center_horizontal|clip_horizontal</item>
        <item name="android:layout_width">@dimen/_21sdp</item>
        <item name="android:layout_height">@dimen/_21sdp</item>
        <item name="android:layout_marginBottom">@dimen/_2sdp</item>
    </style>

    <style name="option_style">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="option_text_style">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textColor">#8fffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="popwin_anim_style">
        <item name="android:windowEnterAnimation">@anim/menushow</item>
        <item name="android:windowExitAnimation">@anim/menuhide</item>
    </style>

    <style name="rate_icon_style">
        <item name="android:padding">@dimen/_3sdp</item>
        <item name="android:layout_width">@dimen/_35sdp</item>
        <item name="android:layout_height">@dimen/_35sdp</item>
        <item name="android:layout_margin">@dimen/_4sdp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="setting_icon_style">
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:layout_width">@dimen/_28sdp</item>
        <item name="android:layout_height">@dimen/_28sdp</item>
    </style>

    <style name="bottom_option_icon">
        <item name="android:layout_width">@dimen/_22sdp</item>
        <item name="android:layout_height">@dimen/_22sdp</item>
    </style>

    <style name="bottom_option_layout">
        <item name="android:paddingTop">@dimen/_7sdp</item>
        <item name="android:paddingBottom">@dimen/_6sdp</item>
    </style>

    <style name="bottom_option_text">
        <item name="android:textSize">@dimen/_9sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:paddingTop">@dimen/_3sdp</item>
    </style>

</resources>
